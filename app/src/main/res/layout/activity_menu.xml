<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/insure_logo"
        android:layout_width="413dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/insure_logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/profile_icon_white" />

    <TextView
        android:id="@+id/menu_welcome"
        android:layout_width="416dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/menu_welcome"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="421dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/user_name" />

    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="571dp"
        android:layout_marginBottom="144dp"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/main_menu_new_claim_btn"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_rounded"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="@string/main_menu_new_claim_btn"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/main_menu_profile_btn"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_rounded"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="@string/main_menu_profile_btn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/main_menu_hst_btn"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_rounded"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/main_menu_hst_btn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/main_menu_logout_btn"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_rounded"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/main_menu_logout_btn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>


